@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Adı</th>
		<th>Ünvan</th>
		<th>Görsel</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.TestimonialID</td>
			<td>@item.Name</td>
			<td>@item.Title</td>
			<td>@item.Image</td>
			<td><a href="/Testimonial/Delete/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
			<td><a href="/Testimonial/Update/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>

		</tr>
	}
</table>
<td><a href="/Testimonial/Add/" class="btn btn-info">Referans Ekle</a></td>

